<p id="notice"><%= notice %></p>

<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Isbn</th>
      <th>Is taken</th>
      <th>Author</th>
      <th>Category</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.name %></td>
        <td><%= book.description %></td>
        <td><%= book.isbn %></td>
        <td><%= book.is_taken %></td>
        <td><%= book.author.first_name %></td>
        <td><%= book.category.name %></td>
        <td><%= link_to 'Show', book %></td>
        <% if current_user %>
          <td><%= link_to 'Lend', lend_book_path(book) %></td>
          <td><%= link_to 'Return', return_book_path(book) %></td>
          <td><%= link_to 'Edit', edit_book_path(book) %></td>
          <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Book', new_book_path %>
