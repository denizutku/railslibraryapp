<p id="notice"><%= notice %></p>

<h1>Categories</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <% if user_signed_in? %>
        <th>Actions</th>
        <th colspan="3"></th>
      <% end %>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><b><%= category.name %></b></td>
        <td><h6><%= category.description %></h6></td>
        <% if user_signed_in? %>
          <td><%= link_to 'Show', category, class: "btn btn-secondary btn-sm"  %></td>
          <% if current_user.is_admin? %>
            <td><%= link_to 'Edit', edit_category_path(category), class: "btn btn-seconday btn-sm" %></td>
            <td><%= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-sm" %></td>
          <% end %>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
